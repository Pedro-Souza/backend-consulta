generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
  binaryTargets   = ["native", "linux-musl", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserOrganizationRole {
  ADMIN
  MEMBER
}

enum UserOrganizationStatus {
  ACTIVE
  PENDING
  DISABLED
}

model User {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now()) @map("created_at")
  updatedAt        DateTime           @updatedAt @map("updated_at")
  //
  email            String             @unique
  password         String
  name             String
  OrganizationUser OrganizationUser[]

  @@map("users")
}

model OrganizationUser {
  id           String                 @id @default(uuid())
  createdAt    DateTime               @default(now()) @map("created_at")
  updatedAt    DateTime               @updatedAt @map("updated_at")
  //
  role         UserOrganizationRole   @default(ADMIN)
  status       UserOrganizationStatus @default(ACTIVE)
  //
  Organization Organization[]
  //
  user         User?                  @relation(fields: [userId], references: [id])
  userId       String
}

model Organization {
  id              String             @id @default(uuid())
  createdAt       DateTime           @default(now()) @map("created_at")
  updatedAt       DateTime           @updatedAt @map("updated_at")
  name            String
  users           OrganizationUser[]
  consultRegister ConsultRegister[]

  @@map("organizations")
}

model ConsultRegister {
  id             String       @id @default(uuid())
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")
  //
  Organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  //
  cpf            String
  birthday       String
  //
  metadata       Json
  webhookUrl     String?      @map("webhook_url")

  @@index([organizationId])
  @@map("consult_registers")
}

model BillingHistory {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("billing_histories")
}
